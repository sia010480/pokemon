{
  "compileOnSave": true,
  "compilerOptions": {
    "inlineSources": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": [
    "**/*",
    "httpdocs/**/*",
    "node_modules/**/*"
  ],
  "filesGlob": [
    "**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
